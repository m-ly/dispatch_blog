<% unless comment.archived? %>
  <h2>Add A comment:</h2>
  <p>
    <strong>Name:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <% if user_signed_in? %>  
    <p>
    <%= link_to "Destroy Comment", [comment.post, comment], 
        data: { turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }%>
    </p>
  <% end %>
<% end %>