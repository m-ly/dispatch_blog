<%= form_with model: [@post, @post.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %></br>
    <%= form.text_field :commenter %>
  </p>

  <p>
    <%= form.label :body %></br>
    <%= form.text_field :body %>
  </p>

  <div>
    <%= form.label :status %>
    <%= form.select :status, ['public', 'private', 'archived'] %>
  </div>

  <p>
    <%= form.submit %>
  </p>
<% end %>